<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_main">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/new_task_task_name_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/new_task_task_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_task_task_name"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/new_task_task_desc_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/new_task_task_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_task_task_description"
            android:gravity="top"
            android:lines="10"
            />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/task_save"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/save"/>

</LinearLayout>